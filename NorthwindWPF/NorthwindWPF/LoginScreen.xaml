<Window x:Class="NorthwindWPF.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthwindWPF"
        mc:Ignorable="d"
        Title="LoginScreen" Height="170" Width="300">
    <Grid>
        <StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Username"/>
            <TextBox x:Name="un"/>
            <TextBlock Text="Password" />
            <PasswordBox x:Name="ps"/>
                <TextBlock Text="User:admin Pass:admin"/>
                <Button Content="Login" Click="Button_Click"/>
            </StackPanel>
            <TextBlock />
            <TextBlock Name="error" Foreground="#FFF40000"/>
        </StackPanel>
    </Grid>
</Window>
